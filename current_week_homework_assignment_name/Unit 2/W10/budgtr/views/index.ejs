<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" href="/css/skeleton.css">
    <title>Budgetr - INDEX Page</title>
</head>
<body>
    <div class="container">
        <h1>Budgtr - ALL Expenses</h1>

        <div id="bankAccount">$</div>


        <table class="u-full-width">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Type of Expense</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
            <% var bankAccount = 0 %>
            <% for (i=0;i<budget.length;i++) { %>
                <tr>
                    <td><%= budget[i].date %></td>
                    <td>
                        <a href="budgets/<%= i %>"><%= budget[i].name %></a>
                    </td>
                    <td>$<%= budget[i].amount %></td>
                </tr>
                <% bankAccount = bankAccount + budget[i].amount %>
            <% } %>
            <% console.log('Bank account balance: ' + bankAccount) %>
        </tbody>
        </table>
        <p>
            <a class="button" href="/budgets/new">ADD an ExPENSE</a>
        </p>
    </div>
</body>
</html>